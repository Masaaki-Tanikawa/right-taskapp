.form
  - if card.errors.any?
    .alert.alert-danger
      %ul
        - card.errors.full_messages.each do |message|
          %li= message

  = form_with(model: [@board, @card], local: true) do |f|
    .form-field
      = f.label :title, class: 'form-label'
      = f.text_field :title, class: 'form-text'

    .form-field
      = f.label :description, class: 'form-label'
      = f.text_area :description, class: 'form-text text-area'

    .form-field
      = f.label :status, class: 'form-label'
      = f.select :status,Card.statuses.keys.map { |key| [t("enums.card.status.#{key}"), key] }, {}, class: 'form-text'

    .form-field
      = f.label :deadline, class: 'form-label'
      = f.date_field :deadline, class: 'form-text'

    .form-actions
      = f.submit '保存', class: 'btn-primary'
