.form
	%ul
		- card.errors.full_messages.each do |message|
			%li= message
	= form_with(model: [@board, @card], local: true) do |f| # model: [@board, @card] で /boards/:board_id/cards に対応
		.form-field
			= f.label :title, class: 'form-label'
			= f.text_field :title,class: 'form-text'
		.form-field
			= f.label :description,class: 'form-label'
			= f.text_area :description,class: 'form-text text-area'
		.form-actions
			= f.submit '保存', class: 'btn-primary'