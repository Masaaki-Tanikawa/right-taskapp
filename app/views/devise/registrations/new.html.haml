.user-inner
  %h2= t('devise.registrations.new.sign_up')
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .user-field
      = f.label :email, class: 'user-label'
      = f.email_field :email, autofocus: true, autocomplete: "email", class: 'user-text'
    .user-field
      = f.label :password, class: 'user-label'
      = f.password_field :password, autocomplete: "new-password", class: 'user-text'
    .user-field
      = f.label :password_confirmation, class: 'user-label'
      = f.password_field :password_confirmation, autocomplete: "new-password", class: 'user-text'
    .user-actions
      = f.submit t('devise.registrations.new.sign_up'), class: 'btn-primary'

