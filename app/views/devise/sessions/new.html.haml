.inner
  %h2 Log in
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .user_field
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: 'user_text'
    .user_field
      = f.label :password
      %br/
      = f.password_field :password, autocomplete: "current-password", class: 'user_text'
    - if devise_mapping.rememberable?
      .user_field
        = f.check_box :remember_me
        = f.label :remember_me
    .actions
      = f.submit "Submit", class: 'btn-primary'

