.inner.inner-form
  %h2.user-title= t('devise.sessions.new.sign_in')
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .form-field
      = f.label :email, class: 'form-label'
      = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-text'
    .form-field
      = f.label :password, class: 'form-label'
      = f.password_field :password, autocomplete: "current-password", class: 'form-text'
    - if devise_mapping.rememberable?
      .form-field
        %label.custom-checkbox-wrapper
          = f.check_box :remember_me, class: 'visually-hidden'
          %span.custom-box
          = f.label :remember_me
    .form-actions
      = f.submit t('devise.sessions.new.sign_in'), class: 'btn-primary'
    .form-links
      %p= link_to t('devise.shared.links.sign_up'), new_registration_path(resource_name)
      %p= link_to t('devise.shared.links.forgot_your_password'), new_password_path(resource_name)
